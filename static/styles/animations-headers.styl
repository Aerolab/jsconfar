@keyframes obelisk-fly
	0%
		transform translateY( 0px)
	100%
		transform translateY( -1000px)

@keyframes obelisk-drop-shadow
	0%
		filter drop-shadow(0px 0px 0px rgba(black,.0))
	100%
		filter drop-shadow(0px 0px 8px rgba(black,.8))

@keyframes obelisk-wing-right
	85%
		transform rotateY(0deg) 
	90%
		transform translateY(-2px)
	100%
		transform translateY(0)

@keyframes obelisk-wing-left
	100%
		transform rotateY(0) 
	90%
		transform translateY(-2px)
	100%
		transform translateY(0)
@keyframes obelisk-fire
	0%
		transform scale(0)
	95%
		transform scale(1.2)
	98%
		transform scale(.9)
	99%
		transform scale(1.1)
	100%
		transform scale(1)

.obelisk-group
	animation-name obelisk-fly
	animation-duration 1.5s
	animation-iteration-count 1
	animation-timing-function cubic-bezier(.675, .005, .245, .415)
	animation-delay 2.5s
	animation-play-state paused
	animation-fill-mode forwards
	.obelisk
		animation-name obelisk-drop-shadow
		animation-duration 2s
		animation-iteration-count 1
		animation-delay 0s
		animation-play-state paused
		animation-fill-mode forwards
	&.launch
		animation-play-state running
		.obelisk
			animation-play-state running
		.wing-left
		.wing-right
		.fire_center
		.fire_right
		.fire_left 
			svg
				animation-play-state running
			
.fires-obelisk
	.fire_center
	.fire_right
	.fire_left
		svg
			animation-name obelisk-fire 
			animation-duration 500ms
			animation-iteration-count 1 
			animation-delay 2s
			animation-play-state paused
			animation-timing-function ease-in-out
			animation-fill-mode forwards
			transform-origin top center 0
			transform scale(0)
.wings-obelisk
	.wing-left
	.wing-right
		svg
			animation-name obelisk-wing-left
			animation-duration 2s
			animation-iteration-count 1
			animation-timing-function ease-in
			animation-delay 0
			animation-play-state paused
			animation-fill-mode forwards
	.wing-right
		svg
			animation-name obelisk-wing-right
.wings-obelisk
.fires-obelisk
	width (140+35)px
	margin 0 auto 
	absolute top 55px left 0
	right 0
	// border solid 1px red
	z-index 2
	.wing-right
	.wing-left
	.wing-space
		height 125px
		width 70px
		display inline-block
		vertical-align bottom
		overflow-x hidden
		// border solid 1px red
		padding-top 40px
		svg
			filter drop-shadow(0px 10px 5px rgba(black,.5))
	.wing-space
		width 16px
	.wing-right
		svg
			transform-origin bottom left 0
			transform rotateY(-90deg)
	.wing-left
		svg
			transform-origin bottom right 0
			transform rotateY(90deg)
	.fire_center
		width 50px
	.fire_left
	.fire_right
		float right
		width 10px
		margin-top 13px
	.fire_left
		float left
		margin-left 1px
.fires-obelisk
	top 145px
	z-index 1
.illustration 
	.obelisk
		z-index 3
.button-obelisk
	width 28px
	absolute top 183px left 50%
	margin-left -498px
	z-index 10
	&:hover
		cursor pointer
		.circle-top
			relative bottom -5px
	&.down
		.circle-top
			relative bottom -5px
			&:after
				content ''
				width 40px
				height 32px
				display block
				relative top -7px left -8px
				border-radius 50%
				border solid 5px rgba(#07374A,.5)
	.circle-top
	.circle-bottom
		width 28px
		height 28px
		border-radius 50%
		border solid 2px #07374A
		display block
	.circle-top
		background #C8562B
		overflow hidden
	.circle-bottom
		background #A54117
		relative top -22px
		z-index -1
