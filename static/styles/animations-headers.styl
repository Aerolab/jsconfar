@import 'nib'
.shake
	display inline-block
	transform-origin center center
	&.shake-constant
		animation-name shake-base
		animation-duration 100ms
		animation-iteration-count infinite
		animation-timing-function ease-in-out
		animation-delay 0s
		animation-play-state running
